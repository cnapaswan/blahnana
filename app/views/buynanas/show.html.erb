<h1>RELOAD your BANANAS</h1>

<div class="buynana-option">
  <% @products.each do |product|%>
    <img src="https://www.clker.com/cliparts/f/1/e/9/H/i/banana-md.png" alt="">
    <span>X<%= product.item_count %></span>
    <span>=$<%= product.price %></span>
  <%= form_tag charges_path do %>
  <input type="hidden" name="price" value="<%= product.price %>">
  <input type="hidden" name="item_count" value="<%= product.item_count %>">
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-description="A month's subscription"
      data-amount="<%= product.price * 100 %>"
      data-locale="auto">
    </script>
  <% end %>
    </article>
  </div>
<% end %>




