<!DOCTYPE html>
<html>
  <head>
    <title>Blahnana</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="data:image/x-icon;base64," rel="icon" type="image/x-icon" />
    <script
    src="http://code.jquery.com/jquery-3.3.1.min.js"
    integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
  </head>

  <body>
    <div class="top-nav">
      <% if current_user %>
      
      <div class="username">
        <a href="/users/<%= current_user.id %>">
          <%= current_user.username %>
        </a>
      </div> <!--end of username-->

      <div class="banana_status">
        <a href="/buynana">
          <img class="banana-icon" src="https://www.clker.com/cliparts/f/1/e/9/H/i/banana-md.png" alt="bananaicon">
          <img src="https://d30y9cdsu7xlg0.cloudfront.net/png/337476-200.png" alt="#">
          <span><%= current_user.banana%></span>
        </a>
      </div><!--end of banana status-->

      <div class="user_image">
        <img src="<%= current_user.image_url %>" >
      </div>

      | <%= link_to "Logout", '/logout' %>
      
      <% else %>
      
      <%= link_to 'Login', '/login' %> 

      | <%= link_to 'Signup', '/signup' %>
      <% end %>

    </div><!--end of top nav-->
    
    <%= yield %>
  </body>
</html>
